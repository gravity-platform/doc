{
    "name": "graviton/documentation",
    "require": {
        "sculpin/sculpin": "^2.0",
        "graviton/deploy-scripts": "^0.2.2",
        "components/jquery": "~1.9.1",
        "components/highlightjs": "~7.3.0",
        "fab/sculpin-pages-bundle": "dev-master"
    },
    "config": {
        "component-dir": "source/components"
    },
    "extra": {
        "incenteev-parameters": {
            "parameter-key": "deploy-scripts",
            "file": "app/config/deploy.yml",
            "env-map": {
                "cf_bin": "CF_BIN",
                "cf_process_timeout": "CF_PROCESS_TIMEOUT",
                "cf_api_url": "CF_API_URL",
                "cf_username": "CF_USERNAME",
                "cf_password": "CF_PASSWORD",
                "cf_org": "CF_ORG",
                "cf_space": "CF_SPACE",
                "cf_domain": "CF_DOMAIN",
                "cf_services": "CF_SERVICES"
            }
        }
    },
    "scripts": {
        "post-install-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
         "post-update-cmd": [
            "Incenteev\\ParameterHandler\\ScriptHandler::buildParameters"
        ],
        "build": "vendor/bin/sculpin generate --env=prod"
    },
    "license": "GPL",
    "authors": [
        {
            "name": "Lucas Bickel",
            "email": "lucas.bickel@swisscom.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true
}
